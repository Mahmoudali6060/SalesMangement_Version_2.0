
@{
    ViewData["Title"] = "المستخدمين";
}

<div class="app-content content container-fluid">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-xs-12 mb-1">
                <h5>المستخدمين</h5>
            </div>
            <div class="content-header-right breadcrumbs-right breadcrumbs-top col-md-6 col-xs-12">
                <div id="myTable" class="breadcrumb-wrapper col-xs-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="index.html">الرئيسية</a>
                        </li>
                        <li class="breadcrumb-item active">
                            المستخدمين
                        </li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="content-body">
            <div class="row">
                <div id="admin" class="col s12">
                    <div class="card material-table">
                        <button type="button" style="margin:10px;" class="btn btn-primary" data-toggle="modal" data-target="#formModal" onclick="clearData();"> مستخدم جديد</button>
                        <input type="text" class="form-control" id="search" name="search" onkeyup='filter();' placeholder="بحث" />
                        <table id="users-table" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>م </th>
                                    <th>الاسم الاول </th>
                                    <th> الاسم الاخير</th>
                                    <th>اسم المستخدم </th>
                                    <th> كلمة المرور   </th>
                                    <th>الصلاحية</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody class="tbody"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="formModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="formModalLabel">اضافة/تعديل مستخدم</h4>
            </div>
            <div class="modal-body">
                <form action="" method="post">
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="Id" placeholder="Id" />
                    </div>
                    <div class="form-group">
                        <label for="FirstName">الاسم الاول  <i style="color:red">*</i></label>
                        <input type="text" class="form-control validate" required id="FirstName" placeholder="الاسم الاول" />
                        <p style="color:red" id="NameIsRequired"> ادخل الاسم الاول </p>
                    </div>
                    <div class="form-group">
                        <label for="LastName">الاسم الاخير </label>
                        <input type="text" class="form-control" id="LastName" placeholder="الاسم الاخير" />
                    </div>
                    <div class="form-group">
                        <label for="Username">اسم المستخدم </label>
                        <input type="text" class="form-control" id="Username" placeholder="اسم المستخدم" />
                    </div>
                    <div class="form-group">
                        <label for="Password">كلمة المرور</label>
                        <input type="password" class="form-control" id="Password" placeholder="كلمة المرور" />
                    </div>
                    <div class="form-group">
                        <label for="Roles">الصلاحية </label>
                        <select id="Roles" name="Roles" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label for="file-upload">صورة الملف الشخصي </label>
                        <input type="file" id="file-upload" accept="image/*" onchange="showPreview(event);">
                        <img id="imageBase64" class="img">
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-primary" id="btnAdd" onclick="add();" value="حفظ" />
                <input type="submit" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="update();" value="تعديل" />
                <button type="button" class="btn btn-default" data-dismiss="modal">الغاء</button>
            </div>
        </div>
    </div>
</div>

<script src="/Scripts/jquery-1.10.2.js"></script>
<script src="/js/users.js"></script>
<script src="/js/shared.js"></script>
